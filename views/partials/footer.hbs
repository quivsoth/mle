<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById("btnSubscribe").addEventListener("click", Subscribe);
    });

    Subscribe = async () => {
        var email = document.getElementById("txtEmail");

        if(email.checkValidity()) {
            put("/user/emailSubscribe", {email: email.value}, (result) => { 
                if (result == "\"SUCCESS\"") { 
                    sendToastMessage("Thank you for subscribing! You've been added to our subscription list..");
                } else {
                    console.error(result);
                }
            });
        }
    }
</script>
