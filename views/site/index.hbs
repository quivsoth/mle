<script>
    document.addEventListener('DOMContentLoaded', function () {
        var splide = new Splide('#era-carousel', {
            classes: {
                arrows: 'splide__arrows arrows',
                arrow: 'splide__arrow arrow',
                prev: 'splide__arrow--prev arrow_prev',
                next: 'splide__arrow--next arrow_next'
            },
            type   : 'loop'
        });
        var bar = splide.root.querySelector('.era-carousel-progress-bar');

        // Update the bar width:
        splide.on('mounted move', function () {
            var end = splide.Components.Controller.getEnd() + 1;
            bar.style.width = String(100 * (splide.index + 1) / end) + '%';
        });
        splide.mount();
    });
</script>