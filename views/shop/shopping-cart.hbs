<div class="container-fluid text-light bg-image">
{{# if products }}
<div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{#each products  }}
                <li class="list-group-item">
                    <span class="">{{this.item.productName}}</span>
                    <span class="badge bg-success">${{this.item.price}}</span>

                    {{!-- to do remove}}

                    {{!-- <div class="btn-group">
                        <button class="btn btn-primary btn-xs dropdown-toggle" type="button">Action<span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a href="#">Remove All</a></li>
                        </ul>
                    </div> --}}
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong class="badge bg-success">Total: {{totalPrice}}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <button type="button" class="btn btn-success">Checkout</button>
        </div>
    </div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>No Items in Cart</strong>
    </div>
</div>
{{/if}}
</div>