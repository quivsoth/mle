<div class="row">
    <div class="col-md-4 cold-md-offset-4 text-light p-5">

        <h2 style="padding-bottom: 1rem">Log In</h2>

        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}

        <form class="text-light" action="/user/signin" method="post">
            <div class="form-group" style="padding-bottom: 2rem">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" class="form-control"></input>
            </div>
            <div class="form-group" style="padding-bottom: 2rem">
                <label for="password" >Password</label>
                <input type="password" id="password" name="password" class="form-control"></input>
            </div>
            <div class="form-group" style="padding-bottom: 2rem">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
        <p><a href="/user/signup">New User? Sign Up!</a></p>
    </div>
</div>