<div class="row">
    <div class="col-md-4 col-md-offset-4 p-5 text-light" style="width:auto">
        <h2 style="padding-bottom: 1rem">Sign Up for a New Account</h2>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form class="text-light" action="/user/signup" method="post">
        <div class="form-group" style="padding-bottom: 2rem">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" name="firstName" class="form-control"></input>
            </div>
            <div class="form-group" style="padding-bottom: 2rem">
                <label for="lastName">Surname</label>
                <input type="text" id="lastName" name="lastName" class="form-control"></input>
            </div>
            <div class="form-group" style="padding-bottom: 2rem">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" class="form-control"></input>
            </div>
            <div class="form-group" style="padding-bottom: 2rem">
                <label for="password" >Password</label>
                <input type="password" id="password" name="password" class="form-control"></input>
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>