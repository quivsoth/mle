<div class="row">
    <div class="col-md-4 cold-md-offset-4">
        
        <h4>Sign Up</h4>

        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}

        <form class="text-light" action="/user/signup" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" class="form-control"></input>
            </div>
            <div class="form-group">
                <label for="password" >Password</label>
                <input type="password" id="password" name="password" class="form-control"></input>
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>